@page "/LionProfile/Index"
@model LionPetManagement_LeQuangLong.Pages.LionProfilePage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="SearchString" value="@Model.SearchString" class="form-control" placeholder="Search by LionTypeName" />
        <input type="number" name="Weight" value="@Model.Weight" class="form-control" placeholder="Search by Weight" />
        <button class="btn btn-primary" type="submit">Search</button>
    </div>
</form>

@if (User.IsInRole("2") || User.IsInRole("3"))
{
    <p>
        <a asp-page="Create" class="btn btn-primary">Create New</a>
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Weight</th>
            <th>Characteristics</th>
            <th>Warning</th>
            <th>LionTypeName</th>
            @if (User.IsInRole("2") || User.IsInRole("3"))
            {
                <th></th>
            }
        </tr>
    </thead>
    <tbody id="TBodyId">
        @foreach (var item in Model.Items)
        {
            <tr id="@item.LionProfileId">
                <td>
                    @Html.DisplayFor(modelItem => item.LionName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Weight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Characteristics)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Warning)
                </td>
                <td>
                    @(item.LionType != null ? item.LionType.LionTypeName : string.Empty)
                </td>
                @if (User.IsInRole("2"))
                {
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.LionProfileId">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.LionProfileId">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.LionProfileId">Delete</a>
                    </td>
                } else if (User.IsInRole("3"))
                {
                    <td>
                        <a asp-page="./Details" asp-route-id="@item.LionProfileId">Details</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

@if (Model.TotalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li class="page-item @(Model.PageIndex == 1 ? "disabled" : "")">
                <a class="page-link" asp-route-PageIndex="@(Model.PageIndex - 1)" asp-route-SearchString="@Model.SearchString">Previous</a>
            </li>
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(Model.PageIndex == i ? "active" : "")"><a class="page-link" asp-route-PageIndex="@i" asp-route-SearchString="@Model.SearchString">@i</a></li>
            }
            <li class="page-item @(Model.PageIndex == Model.TotalPages ? "disabled" : "")">
                <a class="page-link" asp-route-PageIndex="@(Model.PageIndex + 1)" asp-route-SearchString="@Model.SearchString">Next</a>
            </li>
        </ul>
    </nav>
}

<script src="~/js/signalr/dist/browser/signalr.js"></script>

<script>
    "use strict";

    var connection = new signalR.HubConnectionBuilder().withUrl("/signalrhub").build();

    connection.start().then(function () {
        console.log("Connected to the SignalR Hub");
    }).catch(function (err) {
        return console.error(err.toString());
    });

    connection.on("ReceiveDelete", function (Id) {
        var currentPage = @Model.PageIndex;
        var totalPages = @Model.TotalPages;

        $('#TBodyId').find(`tr[id='${Id}']`).fadeOut(300, function() {
            $(this).remove();

            var remainingItems = $('#TBodyId tr').length;

            if (remainingItems === 0 && currentPage > 1) {
                window.location.href = `/LionProfile/Index?pageIndex=${currentPage - 1}`;
            } else if (remainingItems < @Model.TotalPages && currentPage <= totalPages) {
                window.location.href = `/LionProfile/Index?pageIndex=${currentPage}`;
            }
        });
    });
</script>
